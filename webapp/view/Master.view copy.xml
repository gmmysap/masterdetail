<mvc:View controllerName="masterdetail.controller.Master"
  	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<List headerText="Custom Content" mode="Delete" items="{path: '/Customers'}" >
		<CustomListItem>
			<HBox>
				<core:Icon size="2rem" src="sap-icon://attachment-photo" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
				<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
					<Link text="{CustomerID}" target="{ProductPicUrl}" press="handlePress"/>
					<Label text="{CompanyName}"/>
				</VBox>
			</HBox>
		</CustomListItem>
	</List>
</mvc:View>
